{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "ci",
        "cli",
        "core",
        "doc",
        "filter",
        "group",
        "tera",
        "lookup",
        "module",
	      "release",
        "task",
        "vars"
      ]
    ],
    "subject-case": [
      2,
      "always",
      ["sentence-case", "lower-case"]
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  }
}
