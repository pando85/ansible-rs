{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "release",
        "revert"
      ]
    ],
    "scope-enum": [
      2,
      "always",
      [
        "ci",
        "cli",
        "core",
        "filter",
        "group",
        "tera",
        "lookup",
        "module",
        "task",
        "vars"
      ]
    ],
    "subject-case": [
      2,
      "always",
      ["sentence-case",
         "lower-case"]
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ]
  }
}
